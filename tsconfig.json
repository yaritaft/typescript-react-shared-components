{
    "compilerOptions": {
      "outDir": "./dist/",
      "declaration": true,
      "declarationDir": "build",
      "module": "esnext",
      "target": "es5",
      "lib": ["es6", "dom", "es2016", "es2017"],
      "sourceMap": true,
      "jsx": "react",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
     },
    "include": ["src/**/*"],
    "exclude": [
     "node_modules",
     "build",
     "**/*.stories.tsx", // Stories excluded from rollup
     "**/*.test.tsx", // Tests excluded from rollup
     "**/*.spec.tsx" // Tests excluded from rollup
    ]
   }